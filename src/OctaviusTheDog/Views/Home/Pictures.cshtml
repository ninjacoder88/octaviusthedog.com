
@{
    ViewData["Title"] = "Pictures";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<script type="text/javascript" src="~/js/app/PicturesViewModel.js"></script>

<div id="container">
    <div class="row" data-bind="foreach: pictures">
        <div class="col-md-2 col-sm-4 col-6">
            <div class="card">
                <img data-bind="attr: {src: url}" class="img-fluid" />
                <div class="card-body">
                    <p class="card-text"><span data-bind="text: name"></span></p>
                </div>
            </div>

        </div>
    </div>

</div><!--/container-->